<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/abuabu"
    tools:context=".visimisi">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="#293859" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="180dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <android.support.v7.widget.CardView
                        android:id="@+id/about_card"
                        app:cardBackgroundColor="@color/transparan"
                        app:cardElevation="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="70dp"
                            android:src="@drawable/lb"
                            android:layout_gravity="center" />
                    </android.support.v7.widget.CardView>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="DINAS PERDAGANGAN DAN PERINDUSTRIAN"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="KABUPATEN LABUHANBATU"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="400dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/circular"
                    android:layout_marginTop="170dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="0dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="VISI DAN MISI"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccent"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            app:cardBackgroundColor="@color/transparan"
                            app:cardElevation="0dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:layout_marginBottom="10dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:textSize="20sp"
                                    android:text="VISI"
                                    android:layout_marginBottom="90dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="200dp"
                                    android:layout_below="@+id/struktur"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="12dp"
                                    android:layout_marginBottom="1dp"
                                    android:gravity="center"
                                    android:text="TERWUJUDNYA DUNIA USAHA SEKTOR PERDAGANGAN DAN INDUSTRI KABUPATEN LABUHANBATU SEBAGAI PENGGERAK EKONOMI YANG TANGGUH, MANDIRI DAN BERDAYA SAING BERBASIS MASYARAKAT."
                                    android:textSize="13sp"
                                    android:textStyle="bold" />

                            </RelativeLayout>
                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="7dp"
                        android:orientation="horizontal">


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:text="MISI"
                                android:layout_marginBottom="90dp"/>

                            <TextView
                                android:id="@+id/visi2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/Visimisi"
                                android:layout_marginTop="30dp"
                                android:layout_marginBottom="39dp"
                                android:text="1. Mewujudkan industri yang berdaya saing."
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/visi3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/Visimisi"
                                android:layout_marginTop="55dp"
                                android:layout_marginBottom="39dp"
                                android:text="2. Mewujudkan Perdagangan Yang Efektif dan Efisien Dalam Menghadapi Pasar Bebas."
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/visi4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/Visimisi"
                                android:layout_marginTop="100dp"
                                android:layout_marginBottom="39dp"
                                android:text="3. Mewujudkan Penguatan Pasar Lokal."
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/visi5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/Visimisi"
                                android:layout_marginTop="125dp"
                                android:layout_marginBottom="39dp"
                                android:text="4. Menciptakan Pelaku Usaha Yang Jujur dan Konsumen Cerdas."
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>