<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/abuabu"
    tools:context=".tugaspokok">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="#293859" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    android:src="@drawable/lb"
                    android:layout_gravity="center" />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="DINAS PERDAGANGAN DAN PERINDUSTRIAN"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="KABUPATEN LABUHANBATU"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:background="@drawable/circular"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="170dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="TUGAS POKOK DAN FUNGSI"
                    android:layout_marginBottom="20dp"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:id="@+id/struktur_card"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:cardBackgroundColor="@color/transparan"
                        app:cardElevation="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_marginBottom="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:text="TUGAS POKOK"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/struktur"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="35dp"
                                android:layout_marginBottom="1dp"
                                android:gravity="center"
                                android:text="Menyelenggarakan urusan pemerintah bidang perdagangan, pembinaan pedagan, sarana dan prasarana perdagangan dan perindustrian."
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="30dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:text="FUNGSI"/>

                        <TextView
                            android:id="@+id/visi2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/Visimisi"
                            android:layout_marginTop="30dp"
                            android:text="1. Perumusan kebijakan teknis di bidang Perdangan dan Perindustrian."
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/visi3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/Visimisi"
                            android:layout_marginTop="70dp"
                            android:layout_marginBottom="39dp"
                            android:text="2. Pemberi perjanjian pelaksanaan pelayanan umum."
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/visi4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/Visimisi"
                            android:layout_marginTop="110dp"
                            android:layout_marginBottom="39dp"
                            android:text="3. Pengelola ketatausahaan Dinas."
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/visi5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/Visimisi"
                            android:layout_marginTop="130dp"
                            android:layout_marginBottom="39dp"
                            android:text="4. Penyusun rencana pembangunan, pengawasan dan pengendalian di bidang Perdagangan dan Perindustrian."
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/visi6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/Visimisi"
                            android:layout_marginTop="190dp"
                            android:layout_marginBottom="39dp"
                            android:text="5. Merumuskan kebijakan standar pelayanan minimal dalam bidang Perdaganan dan Perindustrian."
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/visi7"
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            android:layout_below="@+id/Visimisi"
                            android:layout_marginTop="250dp"
                            android:text="6. Mengkoordinasikan tugas-tugas lain yang diperintahkan atasan."
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>