<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/abuabu"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="#293859" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <android.support.v7.widget.CardView
                        android:id="@+id/about_card"
                        app:cardBackgroundColor="@color/transparan"
                        app:cardElevation="0dp"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/about"
                            android:layout_width="200dp"
                            android:layout_height="80dp"
                            android:src="@drawable/lb"
                            android:layout_gravity="center" />
                    </android.support.v7.widget.CardView>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="3dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="DINAS PERDAGANGAN DAN PERINDUSTRIAN"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="KABUPATEN LABUHANBATU"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/circular"
                    android:layout_marginTop="170dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp">

                        <android.support.v7.widget.CardView
                            android:id="@+id/harga_card"
                            android:layout_gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="70dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            app:cardElevation="0dp"
                            android:layout_marginRight="2dp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_gravity="center"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginHorizontal="0dp"
                                android:background="@color/white"
                                android:layout_margin="2dp">

                                <ImageView
                                    android:id="@+id/Harga"
                                    android:layout_centerHorizontal="true"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/hargapasar"
                                    android:layout_marginTop="2dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Harga Pasar"
                                    android:textColor="@color/colorAccent"
                                    android:textStyle="bold"
                                    android:textSize="10sp"
                                    android:layout_below="@+id/Harga"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginBottom="0dp"/>

                            </RelativeLayout>

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/profil_card"
                            android:layout_gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="70dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            app:cardElevation="0dp"
                            android:layout_marginLeft="5dp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_gravity="center"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginHorizontal="0dp"
                                android:layout_marginVertical="13dp"
                                android:background="@color/white"
                                android:layout_margin="2dp">

                                <ImageView
                                    android:id="@+id/Profil"
                                    android:layout_centerHorizontal="true"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/profildinas"
                                    android:layout_marginTop="2dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Profil Dinas"
                                    android:textColor="@color/colorAccent"
                                    android:textStyle="bold"
                                    android:textSize="10sp"
                                    android:layout_below="@+id/Profil"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginBottom="1dp"/>

                            </RelativeLayout>

                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:id="@+id/pelayanan_card"
                            android:layout_gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="70dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            app:cardElevation="0dp"
                            android:layout_marginLeft="2dp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_gravity="center"
                                android:layout_width="100dp"
                                android:layout_height="70dp"
                                android:layout_marginHorizontal="0dp"
                                android:layout_marginVertical="13dp"
                                android:background="@color/white"
                                android:layout_margin="2dp">

                                <ImageView
                                    android:layout_centerHorizontal="true"
                                    android:id="@+id/Pelayanan"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/jenispelayanan"
                                    android:layout_marginTop="2dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Jenis Pelayanan"
                                    android:textColor="@color/colorAccent"
                                    android:textStyle="bold"
                                    android:textSize="10sp"
                                    android:layout_below="@+id/Pelayanan"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginBottom="1dp"/>

                            </RelativeLayout>

                        </android.support.v7.widget.CardView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">


                        <android.support.v7.widget.CardView
                            android:layout_gravity="center"
                            android:id="@+id/gudang_card"
                            android:layout_width="0dp"
                            android:layout_height="70dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            app:cardElevation="0dp"
                            android:layout_marginRight="2dp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_gravity="center"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginHorizontal="0dp"
                                android:background="@color/white"
                                android:layout_margin="2dp">

                                <ImageView
                                    android:layout_centerHorizontal="true"
                                    android:id="@+id/Gudang"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/infogudang"
                                    android:layout_marginTop="2dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Info Gudang"
                                    android:textColor="@color/colorAccent"
                                    android:textStyle="bold"
                                    android:textSize="10sp"
                                    android:layout_below="@+id/Gudang"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginBottom="1dp"/>

                            </RelativeLayout>

                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:id="@+id/warung_card"
                            android:layout_gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="70dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            app:cardElevation="0dp"
                            android:layout_marginLeft="2dp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_gravity="center"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginHorizontal="0dp"
                                android:background="@color/white"
                                android:layout_margin="2dp">

                                <ImageView
                                    android:id="@+id/Warung"
                                    android:layout_centerHorizontal="true"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/geraiikm"
                                    android:layout_marginTop="2dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Gerai IKM"
                                    android:textColor="@color/colorAccent"
                                    android:textStyle="bold"
                                    android:textSize="10sp"
                                    android:layout_below="@+id/Warung"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginBottom="1dp"/>

                            </RelativeLayout>

                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:id="@+id/ikm_card"
                            android:layout_gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="70dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            app:cardElevation="0dp"
                            android:layout_marginLeft="2dp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_gravity="center"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginHorizontal="0dp"
                                android:background="@color/white"
                                android:layout_margin="2dp">

                                <ImageView
                                    android:id="@+id/Ikm"
                                    android:layout_centerHorizontal="true"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/dataikm"
                                    android:layout_marginTop="2dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Data IKM"
                                    android:textColor="@color/colorAccent"
                                    android:textStyle="bold"
                                    android:textSize="10sp"
                                    android:layout_below="@+id/Ikm"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginBottom="1dp"/>

                            </RelativeLayout>

                        </android.support.v7.widget.CardView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">

                        <android.support.v7.widget.CardView
                            android:id="@+id/masukan_card"
                            android:layout_gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="70dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            app:cardElevation="0dp"
                            android:layout_marginRight="2dp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_gravity="center"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginHorizontal="0dp"
                                android:background="@color/white"
                                android:layout_margin="2dp">

                                <ImageView
                                    android:id="@+id/masukan"
                                    android:layout_centerHorizontal="true"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/pengaturan"
                                    android:layout_marginTop="2dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pengaturan"
                                    android:textColor="@color/colorAccent"
                                    android:textStyle="bold"
                                    android:textSize="10sp"
                                    android:layout_below="@+id/masukan"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginBottom="1dp"/>

                            </RelativeLayout>

                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:id="@+id/share_card"
                            android:layout_gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="70dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            app:cardElevation="0dp"
                            android:layout_marginLeft="2dp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_gravity="center"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginHorizontal="0dp"
                                android:background="@color/white"
                                android:layout_margin="12dp">

                                <ImageView
                                    android:layout_centerHorizontal="true"
                                    android:id="@+id/share"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/bagikan"
                                    android:layout_marginTop="2dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Bagikan"
                                    android:textColor="@color/colorAccent"
                                    android:textStyle="bold"
                                    android:textSize="10sp"
                                    android:layout_below="@+id/share"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginBottom="1dp"/>

                            </RelativeLayout>

                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:id="@+id/tentang_card"
                            android:layout_gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="70dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            app:cardElevation="0dp"
                            android:layout_marginLeft="2dp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_gravity="center"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginHorizontal="0dp"
                                android:background="@color/white"
                                android:layout_margin="2dp">

                                <ImageView
                                    android:layout_centerHorizontal="true"
                                    android:id="@+id/tentang"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/tentang"
                                    android:layout_marginTop="2dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tentang"
                                    android:textColor="@color/colorAccent"
                                    android:textStyle="bold"
                                    android:textSize="10sp"
                                    android:layout_below="@+id/tentang"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginBottom="1dp"/>
                            </RelativeLayout>

                        </android.support.v7.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="SIDAGIN LABUHANBATU"
                            android:textAlignment="center"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/colorAccent"
                            android:textSize="12sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>